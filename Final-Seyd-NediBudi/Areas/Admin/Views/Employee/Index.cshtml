@model List<EmployeeGetVM>
<div class="container">
    <div class="row">
        <div>
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Poition</th>
                    <th scope="col">Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                  <tr>
                      <th scope="row">@employee.Id</th>
                      <td><img src="~/images/@employee.ImagePath" /></td>
                      <td>@employee.Name</td>
                      <td>@employee.PositionName</td>
                      <td>
                            <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>

                      </td>
                  </tr>  
                }
            </tbody>
        </table>
    </div>
</div>