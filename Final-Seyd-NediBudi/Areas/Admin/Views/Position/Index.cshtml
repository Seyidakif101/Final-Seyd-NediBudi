@model List<PositionGetVM>
<div class="container">
    <div class="row">
        <div>
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var position in Model)
                {
                    <tr>
                        <th scope="row">@position.Id</th>
                        <td>@position.Name</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@position.Id" class="btn btn-warning" >Update</a>
                            <a asp-action="Delete" asp-route-id="@position.Id" class="btn btn-danger" >Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>